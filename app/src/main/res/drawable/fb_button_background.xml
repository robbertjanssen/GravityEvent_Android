<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true"
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/colorFbButtonPressed"
                android:endColor="@color/colorFbButtonPressed"/>
        </shape>
    </item>

    <item
        android:state_focused="false"
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/colorFbButtonPressed"
                android:endColor="@color/colorFbButtonPressed"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/colorFbButton"
                android:endColor="@color/colorFbButton"/>
        </shape>
    </item>
</selector>